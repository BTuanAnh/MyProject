@section Styles {
    <link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />
}

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<body>
    <div class="container">
        <div class="left-section">
            <img src="~/images/c2.png" alt="Ảnh đại diện" class="profile-image">
        </div>

        <!-- Phần đăng nhập -->
        <div class="right-section">
            <div class="login-box">
                <h2>Welcome <span>👋</span></h2>
                <p>Please login here</p>
                <form method="post" asp-action="TryRegister" asp-controller="Account">
                    <div class="input-group">
                        <label for="username">Tên đăng nhập:</label>
                        <input type="text" id="username" name="username" placeholder="Nhập tên đăng nhập" required>
                    </div>
                    <div class="input-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" placeholder="Nhập email" required>
                    </div>
                    <div class="form-group">
                        <label for="phone">Phone:</label>
                        <input type="text" id="Phone" name="Phone" placeholder="Nhập số điện thoại" required>
                    </div>
                    <div class="input-group">
                        <label for="password">Mật khẩu:</label>
                        <input type="password" id="password" name="password" placeholder="Nhập mật khẩu" required>
                    </div>
                    <div class="checkbox-group">
                        <input type="checkbox" id="terms" required>
                        <label for="terms">Tôi đồng ý với các điều khoản & điều kiện</label>
                    </div>
                    <div class="options">
                        <a asp-controller="Account" asp-action="Login" class="forgot-password">Đăng nhập</a>
                    </div>
                    <button type="submit" class="login-button">Đăng ký</button>
                </form>
            </div>
        </div>
    </div>
</body>